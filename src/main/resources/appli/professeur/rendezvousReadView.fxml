<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER"
      spacing="20"
      prefWidth="600"
      prefHeight="420"
      style="-fx-background-color: #f5f6fa;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Titre -->
    <Text text="Détails du rendez-vous">
        <font>
            <Font name="Arial Bold" size="26"/>
        </font>
    </Text>

    <Separator prefWidth="300"/>

    <!-- Carte -->
    <VBox spacing="14"
          alignment="TOP_LEFT"
          prefWidth="380"
          style="-fx-background-color: white;
                 -fx-background-radius: 10;
                 -fx-border-radius: 10;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0, 0, 4);">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Étudiant -->
        <Label text="Étudiant"/>
        <TextField editable="false" focusTraversable="false"
                   style="-fx-background-color: #f1f3f6; -fx-opacity: 1;"/>

        <!-- Professeur -->
        <Label text="Professeur"/>
        <TextField editable="false" focusTraversable="false"
                   style="-fx-background-color: #f1f3f6; -fx-opacity: 1;"/>

        <Separator/>

        <!-- Date -->
        <Label text="Date"/>
        <TextField editable="false" focusTraversable="false"
                   style="-fx-background-color: #f1f3f6; -fx-opacity: 1;"/>

        <!-- Heure -->
        <Label text="Heure"/>
        <TextField editable="false" focusTraversable="false"
                   style="-fx-background-color: #f1f3f6; -fx-opacity: 1;"/>

        <!-- Salle -->
        <Label text="Salle"/>
        <TextField editable="false" focusTraversable="false"
                   style="-fx-background-color: #f1f3f6; -fx-opacity: 1;"/>

        <!-- Statut -->
        <Label text="Statut"/>
        <TextField editable="false" focusTraversable="false"
                   style="-fx-background-color: #eef6ff;
                          -fx-text-fill: #2c3e50;
                          -fx-font-weight: bold;
                          -fx-opacity: 1;"/>

        <Separator/>

        <!-- Boutons -->
        <HBox spacing="10" alignment="CENTER_RIGHT">

            <Button text="Annuler"
                    cancelButton="true"
                    prefWidth="100"
                    style="-fx-background-color: #95a5a6;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;"/>

            <Button text="Éditer"
                    prefWidth="100"
                    style="-fx-background-color: #3498db;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;"/>

            <Button text="Supprimer"
                    prefWidth="110"
                    style="-fx-background-color: #e74c3c;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;"/>

        </HBox>

    </VBox>

</VBox>
