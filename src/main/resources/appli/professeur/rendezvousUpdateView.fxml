<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER"
      spacing="20"
      prefWidth="600"
      prefHeight="420"
      style="-fx-background-color: #f5f6fa;"
      fx:controller="appli.professeur.RendezvousUpdateController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Text text="Modifier le rendez-vous">
        <font>
            <Font name="Arial Bold" size="26"/>
        </font>
    </Text>

    <Separator prefWidth="300"/>

    <VBox spacing="14"
          prefWidth="380"
          style="-fx-background-color: white;
                 -fx-background-radius: 10;
                 -fx-border-radius: 10;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0, 0, 4);">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Date"/>
        <DatePicker fx:id="datePicker" prefWidth="340"/>

        <Label text="Heure"/>
        <Spinner fx:id="heureSpinner" prefWidth="340"/>

        <Label text="Salle"/>
        <ChoiceBox fx:id="salleChoiceBox" prefWidth="340"/>

        <Label text="Statut"/>
        <ChoiceBox fx:id="statutChoiceBox" prefWidth="340"/>

        <Separator/>

        <HBox spacing="12" alignment="CENTER_RIGHT">

            <Button text="Annuler"
                    cancelButton="true"
                    prefWidth="110"
                    style="-fx-background-color: #95a5a6;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;"/>

            <Button text="Enregistrer"
                    defaultButton="true"
                    prefWidth="120"
                    style="-fx-background-color: #2ecc71;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 6;"/>

        </HBox>

    </VBox>

</VBox>
