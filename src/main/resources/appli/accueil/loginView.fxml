<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="appli.accueil.LoginController"
      alignment="TOP_CENTER"
      spacing="15"
      prefWidth="500"
      style="-fx-background-color: #f0f4f8;"
>

    <padding>
        <Insets top="40" bottom="40" left="40" right="40"/>
    </padding>

    <!-- Titre -->
    <Label text="Connexion">
        <font>
            <Font size="28" />
        </font>
        <style>
            -fx-text-fill: #34495e;
            -fx-font-weight: bold;
        </style>
    </Label>

    <!-- Email -->
    <Label text="Email :"
           style="-fx-text-fill: #2c3e50; -fx-font-weight: 600; -fx-font-size: 14;" />
    <TextField fx:id="emailField"
               promptText="Entrez votre email"
               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />

    <!-- Mot de passe -->
    <Label text="Mot de passe :"
           style="-fx-text-fill: #2c3e50; -fx-font-weight: 600; -fx-font-size: 14;" />
    <PasswordField fx:id="mdpField"
                   promptText="Entrez votre mot de passe"
                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;" />

    <!-- Label d'erreur -->
    <Label fx:id="erreurLabel"
           textFill="#e74c3c"
           style="-fx-font-weight: bold;"
           wrapText="true"
           maxWidth="280"
           visible="false" />

    <!-- Boutons -->
    <Button text="Connexion"
            mnemonicParsing="false"
            onAction="#onConnexionClick"
            prefWidth="150"
            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand;" />

    <Button text="Mot de passe oubliÃ©"
            mnemonicParsing="false"
            onAction="#onMdpOublieClick"
            prefWidth="150"
            style="-fx-background-color: transparent; -fx-text-fill: #2980b9; -fx-underline: true; -fx-cursor: hand;" />

    <Button text="Inscription"
            mnemonicParsing="false"
            onAction="#onInscriptionClick"
            prefWidth="150"
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-cursor: hand;" />

</VBox>
